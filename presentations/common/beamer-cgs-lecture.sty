	\end{beamercolorbox}
	\nointerlineskip
	\vspace{-8mm}
	\begin{beamercolorbox}[right, rightskip=0.5cm, ht=8mm, dp=1mm, wd=\paperwidth]{}
		\pgfuseimage{hpi@logo_cmyk}
		%\pgfuseimage{hpi@logo_grey}
	\end{beamercolorbox}
	\vspace{-2mm}
}

\defbeamertemplate*{footline}{cgs}
{
